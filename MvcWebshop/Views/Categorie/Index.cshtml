@model IEnumerable<MvcWebshop.Models.Categorie>

@{
    ViewBag.Title = "Categorie Overzicht";
}

<h2>Categorie Overzicht</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.plaatje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.omschrijving)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.plaatje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.omschrijving)
        </td>
        <td>
            @Html.ActionLink("Details", "Id", new { id=item.id })
        </td>
    </tr>
}

</table>
